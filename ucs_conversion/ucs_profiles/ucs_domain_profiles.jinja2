    domain_descr_fi_a   = ""
    domain_descr_fi_b   = ""
    domain_serial_a     = "{{ domain_serial_a }}"
    domain_serial_b     = "{{ domain_serial_b }}"
    port_policy_descr_a = ""
    port_policy_descr_b = ""
    server_ports        = "{{ server_ports }}"
    src_template        = "{{ src_template }}"
    tags                = []
  }
}

