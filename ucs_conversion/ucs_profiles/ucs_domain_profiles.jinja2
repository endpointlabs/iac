ucs_domain_templates = {
  {{ name }} = {
    fc_ports                      = [{{ fc_ports }}]
    fc_slot_id                    = 1
    organization                  = "{{ org }}"
    policies_network_connectivity = "{{ policies_network_connectivity }}"
    policies_ntp                  = "{{ policies_ntp }}"
    policies_snmp                 = "{{ policies_snmp }}"
    policies_switch_control       = "{{ policies_switch_control }}"
    policies_syslog               = "{{ policies_syslog }}"
    policies_system_qos           = "{{ policies_system_qos }}"
    policies_vlan                 = "{{ policies_vlan }}"
    san_fill_pattern              = "{{ san_fill_pattern }}"
    san_pc_breakoutswport         = 0
    san_pc_ports                  = [{{ san_pc_ports }}]
    san_pc_slot_id                = 1
    san_pc_speed                  = "{{ san_pc_speed }}"
    vsan_a                        = {{ vsan_a }}
    vsan_a_description            = ""
    vsan_a_fcoe                   = {{ vsan_a_fcoe }}
    vsan_b                        = {{ vsan_b }}
    vsan_b_description            = ""
    vsan_b_fcoe                   = {{ vsan_b_fcoe }}
    vsan_enable_trunking          = {{ vsan_enable_trunking }}
