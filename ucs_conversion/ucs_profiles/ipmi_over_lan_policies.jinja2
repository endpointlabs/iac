
  "{{ name }}" = {
    description    = "{{ descr }}"
    enabled        = {{ enabled|lower }}
    ipmi_key       = var.ipmi_key_1
    privilege      = "admin"
    organization   = "{{ org }}"
{%- if tags %}
    tags = [
  {%- for item in tags %}
      {
    {%- for k, v in item.items() %}
        {{ k }} = "{{ v }}",
    {%- endfor %}
      },
  {%- endfor %}
    ]
{%- else %}
    tags           = []
{%- endif %}
  }