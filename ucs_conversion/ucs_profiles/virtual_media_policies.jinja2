
  "{{ name }}" = {
    description                     = "{{ descr }}"
{%- if enable_low_power_usb %}
    enable_low_power_usb            = {{ enable_low_power_usb|lower }}
{%- else %}
    enable_low_power_usb            = false
{%- endif %}
{%- if enable_virtual_media %}
    enable_virtual_media            = {{ enable_virtual_media|lower }}
{%- else %}
    enable_low_power_usb            = false
{%- endif %}
{%- if enable_virtual_media_encryption %}
    enable_virtual_media_encryption = {{ enable_virtual_media_encryption|lower }}
{%- else %}
    enable_virtual_media_encryption = false
{%- endif %}
    organization                    = "{{ org }}"
{%- if tags %}
    tags = [
  {%- for item in tags %}
      {
    {%- for k, v in item.items() %}
        {{ k }} = "{{ v }}",
    {%- endfor %}
      },
  {%- endfor %}
    ]
{%- else %}
    tags                            = []
{%- endif %}
{%- if vmedia_mounts %}
    vmedia_mounts = [
  {%- for item in vmedia_mounts %}
      {
    {%- for k, v in item.items() %}
      {%- if k == 'authentication_protocol' %}
        authentication_protocol = "{{ v }}",
      {%- elif k == 'device_type' %}
        device_type             = "{{ v }}",
      {%- elif k == 'file_location' %}
        file_location           = "{{ v }}",
      {%- elif k == 'hostname' %}
        hostname                = "{{ v }}",
      {%- elif k == 'mount_options' %}
        mount_options           = "{{ v }}",
      {%- elif k == 'name' %}
        name                    = "{{ v }}",
      {%- elif k == 'password' %}
        password                = 1,
      {%- elif k == 'protocol' %}
        protocol                = "{{ v }}",
      {%- elif k == 'remote_file' %}
        remote_file             = "{{ v }}",
      {%- elif k == 'remote_path' %}
        remote_path             = "{{ v }}",
      {%- elif k == 'username' %}
        username                = "{{ v }}"
      {%- endif %}
    {%- endfor %}
      },
  {%- endfor %}
    ]
{%- else %}
    vmedia_mounts                   = []
{%- endif %}
  }