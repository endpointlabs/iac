
  "{{ name }}" = {
{%- if assignment_order %}
    assignment_order = "{{ assignment_order }}"
{%- endif %}
{%- if mac_blocks %}
    mac_blocks       = [
  {%- for item in mac_blocks %}
      {
    {%- for k, v in item.items() %}
        {{ k }} = "{{ v }}",
    {%- endfor %}
      },
  {%- endfor %}
    ]
{%- else %}
    mac_blocks       = []
{%- endif %}
    organization     = "{{ org }}"
{%- if tags %}
    tags             = [
  {%- for item in tags %}
      {
        key   = "{{ item['key'] }}",
        value = "{{ item['value'] }}"
      },
  {%- endfor %}
    ]
{%- else %}
    tags             = []
{%- endif %}
  }